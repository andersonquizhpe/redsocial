extends ../layout
block content
 .page-header.header-filter(data-parallax='true', style="background-image: url('https://images2.alphacoders.com/933/933145.jpg');")
  .container.login-content
    .login.tab-pane.active
     .card.card-body.col-md-4(style="margin-left: 30%; margin-top:3%")
      .section.login-content
        h3.login-form.text-center
          i.fa.fa-lg.fa-fw.fa-user
          span Inicia sesion
        .login-form
          if typeof msg != 'undefined'
            if typeof msg.error != 'undefined' && msg.error.length > 0
              .form-group
                .alert.alert-danger(style="font-size: 15px;") #{msg.error}
            if typeof msg.info != 'undefined' && msg.info.length > 0
              .form-group
                .alert.alert-info(style="font-size: 15px;") #{msg.info}
          form.login-form(method='post', action='/inicio_sesion')
            .form-group
              input#usuario.form-control(type='email', placeholder='Correo', name='usuario', required='true', autofocus='')
              .form-control-feedback
            .form-group
              input#clave.form-control(type='password', placeholder='Clave', name='clave', required='true')
              .form-control-feedback         
            .col-md-9.ml-auto
            .form-group.btn-container(style="margin-left: 69%; width:50%; margin-bottom: 0%; margin-top:0%;")
              button.btn.btn-success.bg-dark(type='submit')
                i.fa.fa-sign-in.fa-lg.fa-fw
                span Entrar      
            input(type='hidden', name='${_csrf.parameterName}', value='${_csrf.token}')
